<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="60dp"
        android:text="Inicio sesion"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/inicio_correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:hint="Introduce tu correo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/inicio_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:hint="Introduce la pass"
        app:layout_constraintEnd_toEndOf="@+id/inicio_correo"
        app:layout_constraintStart_toStartOf="@+id/inicio_correo"
        app:layout_constraintTop_toBottomOf="@+id/inicio_correo" />

    <Button
        android:layout_margin="50dp"
        android:id="@+id/boton_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inicio"

        app:layout_constraintEnd_toEndOf="@+id/inicio_pass"
        app:layout_constraintStart_toStartOf="@+id/inicio_pass"
        app:layout_constraintTop_toBottomOf="@+id/inicio_pass" />


</androidx.constraintlayout.widget.ConstraintLayout>