<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <TextView
        android:layout_margin="20dp"
        android:id="@+id/correo_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="correo" />

    <TextView
        android:id="@+id/pass_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="25dp"

        app:layout_constraintEnd_toEndOf="@+id/correo_usuario"
        app:layout_constraintStart_toStartOf="@+id/correo_usuario"
        app:layout_constraintTop_toBottomOf="@+id/correo_usuario"
        tools:text="pass" />

</androidx.constraintlayout.widget.ConstraintLayout>