<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <ImageView
        android:id="@+id/imagen_ciudad_spinner"
        android:layout_margin="10dp"
        android:layout_width="54dp"
        android:layout_height="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@android:drawable/ic_dialog_info"/>

    <TextView
        android:id="@+id/nombre_ciudad"
        android:layout_width="229dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imagen_ciudad_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imagen_ciudad_spinner"
        app:layout_constraintTop_toTopOf="@+id/imagen_ciudad_spinner"
        tools:text="ciudad" />

</androidx.constraintlayout.widget.ConstraintLayout>